<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20sp">

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="200sp"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/detail_fragment_imageRow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="200sp"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/detail_fragment_title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceLarge"
                            android:textColor="@color/list_by"
                            android:paddingTop="10sp"
                            android:paddingRight="10sp" />

                        <TextView
                            android:id="@+id/detail_fragment_mpaa_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/list_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/detail_fragment_runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/list_text" />

                    <TextView
                        android:id="@+id/detail_fragment_critics_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingTop="20dp"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/list_text" />

                    <TextView
                        android:id="@+id/detail_fragment_audience_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/list_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detail_fragment_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25sp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/list_text"
                    android:text="@string/film_start"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>